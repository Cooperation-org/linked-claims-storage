{
	"compilerOptions": {
		"target": "ES6",
		"module": "ES6",
		"moduleResolution": "node",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationDir": "./dist/types"
	},
	"include": ["src/**/*", "types/**/*"],
	"exclude": ["node_modules"]
}
