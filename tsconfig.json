{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationDir": "./dist/types",
		"resolveJsonModule": true
	},
	"include": ["src/**/*", "types/**/*"],
	"exclude": ["node_modules"]
}
